<h1 class="center">My Projects</h1>

<% @projects.each do |project| %>
  <div class="card">
    <div class="card-body">
      <span>
        <h4><%= link_to project.name, project_path(project) %></h4>
      </span>
      <p style="padding: 0.5rem 1rem;">
        <%= project.description %>
      </p>
    </div>
  </div>
  <br/>
<% end %>